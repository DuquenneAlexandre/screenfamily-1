<div class="container">
  <div class="row text-center">
    <form action="/projects" class="form">
      <div class="col-xs-6 col-sm-6 col-md-2 col-md-offset-1 col-lg-2 col-lg-offset-1">
        <input name="start_date" type="date" class="form-control opacity over " placeholder="Start">
      </div>
      <div class="col-xs-6 col-sm-6 col-md-2 col-lg-2">
        <input name="end_date" type="date" class="form-control opacity over " placeholder="End">
      </div>
      <div class="col-xs-6 col-sm-6 col-md-2 col-lg-2">
        <select name="city" class="form-control opacity over" placeholder="City">
          <option value=""></option>
          <option value="Bordeaux">Bordeaux</option>
          <option value="Lille">Lille</option>
        </select>

      </div>
      <div class="col-xs-6 col-sm-6 col-md-2 col-lg-2">
        <select name="genre" class="form-control opacity over" placeholder="Genre">
          <option value=""></option>
          <option value="Action">Action</option>
          <option value="Adventure">Adventure</option>
          <option value="Animated">Animated</option>
          <option value="Comedy">Comedy</option>
          <option value="Drama">Drama</option>
          <option value="Horror">Horror</option>
          <option value="Thriller">Thriller</option>
          <option value="Romance">Romance</option>
          <option value="Science Fiction">Science Fiction</option>
          <option value="War">War</option>
          <option value="Western">Western</option>
        </select>
      </div>
      <div class="col-xs-12 col-sm-12 col-md-2 col-lg-2">
        <input type="submit" class="btn opacity btn-primary btn-block" value="Search">
      </div>
    </form>
  </div>
</div>
