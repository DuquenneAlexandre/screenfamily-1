<div class="container margin_top">
  <h1 class="text-center">My profile <%= @user.first_name %>  <%= @user.last_name %></h1>
    <div class="row">
      <div class="col-xs-offset-1 col-xs-3">
        <%= image_tag @user.user_picture, class:"photoadroite_profile" %>
      </div>
      <div class="col-xs-3">
          Prenom : <%= @user.last_name %><br>
          Non : <%= @user.first_name %><br>
          Date de naissance :<%= @user.birth_date %><br>
      </div>
      <div class="col-xs-3">
          Ville : <%= @user.city %><br>
          Email :<%= @user.email %><br>
      </div>
    </div>
  <div class="btn btn-primary col-sm-3 col-sm-offset-4">
    <%= link_to "Back Home", root_path %>
  </div>
  <div class="btn btn-primary col-sm-3 col-sm-offset-4">
    <%= link_to "Edit", profile_edit_user_path %>
  </div>
</div>

<h2>Reviews</h2>
<% @user.reviews.each do |comment| %>
  <p>
    <b>Content:</b>
    <%= comment.contents_prof %>
  </p>
 <% end %>
    </div>
  </div>
</div>
  </div>
</div>

<p>Add a review:</p>
<%= form_for([@user, @user.reviews.build]) do |f| %>
  <div class="field">
    <%= f.label :contents_prof %><br />
    <%= f.text_field :contents_prof %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
