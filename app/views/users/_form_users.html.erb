<div class="container margin_top">
    <h1 class="text-center">My profile
        <%= @user.first_name %>
        <%= @user.last_name %></h1>
    <div class="row">
        <div class="col-xs-offset-1 col-xs-10 col-sm-3">
            <%= image_tag @user.user_picture, class:"photoadroite_profile" %>
        </div>
        <div class="col-xs-12 col-sm-3">
          <%= simple_form_for (@user) do |f| %>
            <%= f.input :first_name %>
            <%= f.input :last_name %>
            <%= f.input :birth_date %>
            <%= f.input :city %>
          </div>
          <div class="col-xs-12 col-sm-3">
            <%= f.input :phone_number %>
            <%= f.input :email %>
            <%= f.input :user_picture %>
            <%= f.input :user_picture_cache, as: :hidden %>
            <%= f.button :submit %>
          <% end %>
        </div>
    </div>
    <div class="col-xs-offset-1 col-md-offset-4 col-md-6 col-md-6 margin-bottom">
        <%= link_to "Back Home", root_path, class:"btn btn-primary btn-round btn-block" %>
    </div>
</div>
