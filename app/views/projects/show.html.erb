<div class="container" >
  <div class="row">
    <div class="card_projects">
      <p class="project_movie_title"><%= @project.name %></p>
      <div class="container">
        <div class="img-card-back" style="background: url('<%= @project.project_picture.url %>') no-repeat center center;background-size:cover;"></div>
      </div>
      <p class="date">Du: <%= @project.start_date %>
      Au: <%= @project.end_date %></p>
      <p class="project_movie_city">Ville: <%= @project.city %></p>
      <p class="project_movie_genre">Genre: "<%= @project.genre %>"</p>
      <div class="project-percent-pledged" style="width: 100%"></div>
      <p class="project_movie_synopsis">Synopsis: "<%= @project.synopsis %>"</p>
      <p class="project_movie_scenario">Scenario: "<%= @project.scenario %>"</p>
      <div class="project-percent-pledged" style="width: 100%"></div>
      <p class="project_movie_participants">Participants: <%= @project.number_of_participants %></p>
      <p class="project_movie_number_of_days"><%= @project.number_of_days_for_crowdfunding %></p>
      <p class="project_movie_goal_for_crowd"><%= @project.goal_for_crowdfunding %></p>
      <br>

    <% # choisir son rÃ´le et rejoindre le projet %>

    <% if policy(@project).join_project? %>

      <h2>Choose your role:</h2>
      <%= simple_form_for([@project, @project.roles.build]) do |f| %>
        <div class="field">
          <%= f.input :title, collection: Role.roles_titles %>
        </div>
        <div class="actions">
          <%= f.submit %>
        </div>
      <% end %>

    <% end %>

    <h2>Roles</h2>
    <% @project.roles.each do |role| %>
      <p>
        <%= role.title %>
      </p>
    <% end %>

    </div>

<% # liste des membres du projet %>

<h2> List of joiners </h2>
<% @project.users.each do |user| %>
<%= user.first_name %>
<%= user.last_name %>
<% end %>

<% # reviews %>

<h2>Reviews</h2>
<% @project.reviews.each do |comment| %>
