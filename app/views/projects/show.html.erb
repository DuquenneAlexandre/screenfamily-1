    <%= f.text_field :content %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<%= link_to 'Edit Post', edit_project_path(@project) %>
<%= link_to 'Back to Posts', projects_path %>

<% # mur de discussion %>

<%= simple_form_for @message, url: project_messages_path(@project) do |f| %>
<%= f.input :content %>
<%= f.button :submit %>
<% end %>

<% @messages.each do |message| %>
<%= message.user.first_name %>
<%= message.content %>
<% end %>

