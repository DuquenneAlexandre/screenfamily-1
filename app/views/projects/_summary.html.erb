<section class="module">

    <div class="container">

        <div class="row">

            <!-- CONTENT -->
            <div class="col-sm-9">

                <article class="post post-single">

                    <!-- MEDIA -->
                    <div class="post-media">
                        <%= image_tag @project.project_picture %>
                    </div>
                    <!-- /MEDIA -->

                    <!-- META -->
                    <div class="post-meta font-alt">
                        By
                        <%#= proj.users.find(1).first_name %>/ Ville:
                        <%= @project.city %>/ / Participants:
                        <%= @project.number_of_participants %>.
                    </div>
                    <!-- /META -->

                    <!-- HEADER -->
                    <div class="post-header">
                        <h1 class="post-title font-alt">
                            <%= @project.name %>
                        </h1>
                    </div>
                    <!-- /HEADER -->

                    <!-- POST CONTENT -->
                    <div class="post-entry">
                        <%= @project.synopsis %>
                    </div>
                    <!-- /POST CONTENT -->

                    <!-- TAGS -->
                    <div class="tags">
                        <a>Genre: "<%= @project.genre %>"</a>
                    </div>
                    <!-- /TAGS -->

                </article>

                <!-- COMMENTS -->
                <div class="comments">
                    <h4 class="comment-title font-alt">Comments</h4>
                    <hr class="divider m-b-30">

                    <!-- COMMENT 1 -->
                    <ul class="coin_mess2">
                        <% @project.reviews.each do |comment| %>
                        <div class="comment clearfix">
                            <div class="comment-avatar">
                                <img src="https://s3.amazonaws.com/uifaces/faces/twitter/ryanbattles/128.jpg" alt="">
                            </div>
                            <div class="comment-content clearfix">
                                <h5 class="comment-author font-alt">
                                    <a href="#">John Doe</a>
                                </h5>
                                <div class="comment-body">
                                    <p>
                                        <li>
                                            <%= comment.content %>
                                        </li>
                                    </p>
                                </div>
                                <div class="comment-meta font-alt">Today, 14:55 -
                                    <a href="#">Reply</a>
                                </div>
                            </div>
                        </div>
                    </ul>
                    <% end %>
                    <!-- /COMMENT 1 -->
                </div>
                <!-- /COMMENTS -->

                <!-- COMMENT FORM -->
                <div class="comment-form" id="coin_mes">
                    <h4 class="comment-form-title font-alt">Leave a comment</h4>
                    <hr class="divider m-b-30">

                    <div class="row">
                        <%= simple_form_for([@project, @project.reviews.build]) do |f| %>
                        <div class="col-md-12">
                            <div class="form-group">
                                <%= f.input :content %>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <%= f.submit class:"btn btn-round btn-g"%>
                        </div>

                        <% end %>
                    </div>
                    <!-- /COMMENT FORM -->
                </div>
            </div>
            <!-- /CONTENT -->

            <!-- SIDEBAR -->
            <div class="col-sm-3 m-t-sm-60">

                <!-- Choisir son role -->
                <div class="widget">
                    <% if policy(@project).join_project? %>
                    <h5 class="widget-title font-alt">Choose your role</h5>
                    <%= simple_form_for([@project, @project.taken_roles.build]) do |f| %>
                    <div class="field">
                        <%= f.input :title, collection: @project.roles %>
                    </div>
                    <div class="actions">
                        <%= f.submit %>
                    </div>
                    <% end %>
                    <% end %>
                    <!-- /Choisir son role  -->
                    <!-- Son roles -->
                    <h5 class="widget-title font-alt">Tous les rôles</h5>
                    <% @project.roles.each do |role| %>
                    <p>
                        <%= role.title %>
                    </p>
                    <% end %>

                    <h5 class="widget-title font-alt">Rôles déjà pris</h5>
                    <% @project.taken_roles.each do |taken_role| %>
                    <p>
                        <%= taken_role.title %>
                    </p>
                    <% end %>
                    <!-- /Son roles  -->

                    <!-- les différents roles -->
                    <h5 class="widget-title font-alt">List of joiners</h5>
                    <% @project.users.each do |user| %>

                    <%= image_tag user.user_picture %>

                    <%= user.first_name %>
                    <%= user.last_name %>
                    <% end %>
                    <!-- /les différents roles  -->
                </div>

                <!-- WIDGET -->
                <div class="widget">
                    <%@project.users.each do |user| %>
                    <h5 class="widget-title font-alt">List of joiners</h5>
                    <ul class="widget-posts">

                        <li class="clearfix">
                            <div class="widget-posts-image">
                                <a href="#">
                                    <%= image_tag user.user_picture %>
                                </a>
                            </div>
                            <div class="widget-posts-body">
                                <div class="widget-posts-meta">
                                    <%= user.first_name %>
                                    <%= user.last_name %>
                                </div>
                            </div>
                        </li>
                    </ul>
                    <% end %>
                </div>
                <!-- /WIDGET -->

            </div>
            <!-- /SIDEBAR -->

        </div>

    </section>
