<div class="container">
  <div class="wrapper">
    <div class="col-xs-12 col-md-10 col-md-offset-1 col m-t-md-60">
      <% i = @project.end_date - @project.start_date %>
      <% a = 0 %>
      <%= month_calendar(attribute: :start_at) do |date| %>
        <%= date %>
        <% if date == @project.start_date %>

          <div class="project-percent-pledged" style="width: 100%"></div>
          <% a = 1 %>
        <% end %>
        <% if a != 0 && a <= i %>
          <div class="project-percent-pledged" style="width: 100%">Suivi</div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
